#!/bin/sh -e

[ -r /usr/lib/libatomic.so ] || (
    sed "s/\\'libraries\\'\\: \\[\\'-latomic\\'\\],/#/g" node.gyp > _
    mv -f _ node.gyp
)

CC="${CC:-cc}" CXX="${CXX:-c++}" \
    ./configure \
    --prefix=/usr \
    --shared-zlib \
    --shared-openssl \
    --with-intl=none \
    --without-etw \
    --without-dtrace \
    --without-report \
    --without-node-snapshot \
    --without-node-code-cache \
    --ninja

ninja -C out/Release
tools/install.py install "$1" /usr

# Remove unneeded files.
rm -rf \
    "$1/usr/include/node/openssl" \
    "$1/usr/share/doc" \
    "$1/usr/share/systemtap" \
    "$1/usr/lib/node_modules/npm/scripts" \
    "$1/usr/lib/node_modules/npm/configure"
